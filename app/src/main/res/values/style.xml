<?xml version="1.0" encoding="utf-8"?>
<!-- res/values/styles.xml -->
<resources>
    <style name="Theme.MyApp" parent="Theme.MaterialComponents.DayNight">
        <!-- 定义你的主题颜色 -->
        <item name="colorPrimary">#6200EE</item>
        <item name="colorPrimaryVariant">#3700B3</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSurface">#FFFFFF</item> <!-- 定义 surface 颜色 -->
        <item name="colorOutline">#DDDDDD</item> <!-- 定义边框颜色 -->
    </style>

    <style name="CustomBottomSheet" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetModal</item>
    </style>

    <style name="CustomBottomSheetModal" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/custom_bottom_sheet_background</item>
        <!-- 其他自定义属性 -->
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.BottomSheet</item>
    </style>

    <!-- 定义 BottomSheet 的形状外观 -->
    <style name="ShapeAppearanceOverlay.BottomSheet" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
    </style>
</resources>