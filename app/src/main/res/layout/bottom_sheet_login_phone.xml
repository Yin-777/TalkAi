<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/bg_rounded_top_corner"> <!-- 圆角背景 -->



    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_phone_login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="手机号码"
        android:textColorHint="?android:attr/textColorPrimary"
        android:textColor="?android:attr/textColorPrimary"
        android:layout_margin="20dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_code_login"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:hint="验证码"
            android:textColorHint="?android:attr/textColorPrimary"
            android:textColor="?android:attr/textColorPrimary"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_sent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/rounded_blue_button_selector"
            android:text="发送验证码"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="18dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <CheckBox
            android:id="@+id/ck_box"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="勾选即同意该APP"
            android:textColor="?android:attr/textColorPrimary"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:text="用户协议"
            android:layout_gravity="center"
            />
    </LinearLayout>
    <!-- 手机登录 -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_login_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="登录"
        android:textStyle="bold"
        android:textSize="18dp"
        android:background="@drawable/rounded_blue_button_selector"
        android:layout_marginTop="16dp"
        android:textColor="@color/black"
        android:layout_marginBottom="40dp"
        />


</LinearLayout>


